---
import Layout from '~/layouts/Layout.astro';

import ComingSoon from '~/components/ComingSoon.astro';
---

<Layout>
  <section class="relative md:-mt-[76px] py-10 md:py-16">
    <div class="absolute inset-0 pointer-events-none" aria-hidden="true"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
      <div class="pt-0 md:pt-[76px] pointer-events-none"></div>
      <div class="max-w-xl sm:mx-auto lg:max-w-2xl">
        <div class="py-12 md:py-20 lg:py-0 lg:flex flex-col lg:items-center lg:h-[50vh] lg:gap-8">
          <div class="mb-8 md:mx-auto text-center md:mb-12 max-w-3xl">
            <h2 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
              Work with us!
            </h2>
          </div>
          <div class="max-w-3xl mx-auto text-left items-center sm:text-center text-xl text-muted flex gap-4">
            <p>There are no open positions at this time.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
